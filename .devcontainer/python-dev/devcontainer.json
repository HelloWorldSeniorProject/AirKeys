{
    "name": "AirKeys - Python Dev",
    "dockerComposeFile": "docker-compose.yml",
    "service": "python-dev",
    "shutdownAction": "stopCompose",
    "workspaceFolder": "/home/NRuser/airkeys/",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"VisualStudioExptTeam.vscodeintellicode",
				"KevinRose.vsc-python-indent",
				"ritwickdey.LiveServer"
			]
		}
	},
    "postCreateCommand": "sudo chown NRuser -R scripts && sudo dos2unix scripts/init.sh && chmod +x scripts/init.sh && scripts/init.sh"
}